<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.god.kahit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/kahit_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/kahit_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".view.AboutKahitView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.MainActivityView" />
        </activity>
        <activity
            android:name=".view.SettingsView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.MainActivityView" />
        </activity>
        <activity
            android:name=".view.PreGameCountdownView"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.ChooseGameView" />
        </activity>
        <activity
            android:name=".view.CategoryView"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.ChooseGameView" />
        </activity>
        <activity
            android:name=".view.LotteryView"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.ChooseGameView" />
        </activity>
        <activity
            android:name=".view.MainActivityView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.ChooseGameView"
            android:parentActivityName=".view.MainActivityView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.ChooseGameView" />
        </activity>
        <activity
            android:name=".view.CreateLobbyNetView"
            android:noHistory="true"
            android:parentActivityName=".view.ChooseGameView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.CreateLobbyNetView" />
        </activity>
        <activity
            android:name=".view.HotSwapAddPlayersView"
            android:parentActivityName=".view.HotSwapGameModeView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.HotSwapGameModeView" />
        </activity>
        <activity
            android:name=".view.HotSwapGameModeView"
            android:parentActivityName=".view.ChooseGameView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.ChooseGameView" />
        </activity>
        <activity
            android:name=".view.JoinLobbyNetView"
            android:noHistory="true"
            android:parentActivityName=".view.ChooseGameView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.CreateLobbyNetView" />
        </activity>
        <activity
            android:name=".view.QuestionView"
            android:noHistory="true"
            android:parentActivityName=".view.MainActivityView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.ChooseGameView" />
        </activity>
        <activity
            android:name=".view.ScorePageView"
            android:noHistory="true"
            android:parentActivityName=".view.MainActivityView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.ChooseGameView" />
        </activity>
        <activity
            android:name=".view.LobbyNetView"
            android:parentActivityName=".view.MainActivityView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.ChooseGameView" />
        </activity>
        <activity
            android:name=".view.StoreView"
            android:parentActivityName=".view.MainActivityView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.ChooseGameView" />
        </activity>
        <activity
            android:name=".view.AfterQuestionScorePageView"
            android:noHistory="true"
            android:parentActivityName=".view.QuestionView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.god.kahit.view.QuestionView" />
        </activity>
    </application>

    <!-- Required for Nearby Connections -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chooseGameActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_stripes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hsGmLogo"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kahit" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:dividerPadding="45dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/hsGmWhateverButton"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#00CBF8"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bevietnamextrabolditalic"
                    android:background="@drawable/play_button_selector"
                    android:onClick="launchJoinRoomClass"
                    android:text="join"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/hsGmYouBetterRunButton"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bevietnamextrabolditalic"
                    android:backgroundTint="#00CBF8"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/play_button_selector"
                    android:onClick="launchHostCreateRoomClass"
                    android:text="host"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/storeButton"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bevietnamextrabolditalic"
                    android:backgroundTint="#00CBF8"
                    android:background="@drawable/play_button_selector"
                    android:layout_marginTop="30dp"
                    android:onClick="launchHotSwapGameModeClass"
                    android:text="hot swap"
                    android:textSize="17sp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/sideNavButton"
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:background="@drawable/play_button_selector"
                        android:backgroundTint="#00CBF8"
                        android:layout_marginRight="15dp"
                        android:onClick="launchSidenavTest"
                        android:text="sidenav store" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:backgroundTint="#00CBF8"
                        android:background="@drawable/play_button_selector"
                        android:onClick="launchHotSwapGameModeClass"
                        android:text="Lottery"
                        android:textSize="17sp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lobby_row_constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/light_border_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            app:layout_constraintBottom_toTopOf="@+id/lobby_row_id"
            app:layout_constraintEnd_toEndOf="@+id/lobby_row_id"
            app:layout_constraintStart_toStartOf="@+id/lobby_row_id" />

        <TextView
            android:id="@+id/lobby_row_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="ShRE"
            app:layout_constraintBottom_toBottomOf="@+id/lobby_row_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lobby_row_name" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lobby Name"
            app:layout_constraintBottom_toTopOf="@+id/lobby_row_name"
            app:layout_constraintEnd_toEndOf="@+id/lobby_row_name"
            app:layout_constraintStart_toStartOf="@+id/lobby_row_name" />

        <TextView
            android:id="@+id/lobby_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOOT MANSION"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/lobby_row_status"
            app:layout_constraintStart_toEndOf="@+id/lobby_row_id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            app:layout_constraintBottom_toTopOf="@+id/lobby_row_status"
            app:layout_constraintEnd_toEndOf="@+id/lobby_row_status"
            app:layout_constraintStart_toStartOf="@+id/lobby_row_status" />

        <TextView
            android:id="@+id/lobby_row_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Connecting"
            app:layout_constraintBottom_toBottomOf="@+id/lobby_row_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lobby_row_name"
            app:layout_constraintTop_toTopOf="@+id/lobby_row_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
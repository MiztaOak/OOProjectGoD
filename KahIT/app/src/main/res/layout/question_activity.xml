<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_stripes"
    android:fitsSystemWindows="true"
    tools:context=".view.MainActivityView"
    tools:ignore="MissingDefaultResource">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/choosePlayerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="40dp"
                android:text="choose player"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.582"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </FrameLayout>

    </com.google.android.material.navigation.NavigationView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/questionActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/qLogoImageView"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kahit" />

        <TextView
            android:id="@+id/qNumOfQuesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 1 of 10"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.132" />

        <TextView
            android:id="@+id/qHotSwapCaseTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Player name in Hot Swap case*"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18" />

        <TextView
            android:id="@+id/qQuestionTextView"
            style="@android:style/Widget.TextView.SpinnerItem"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:width="1dp"
            android:background="@drawable/light_border"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:shadowColor="@android:color/darker_gray"
            android:text="TEXT"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/qAnswer1TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qHotSwapCaseTextView"
            app:layout_constraintVertical_bias="0.326" />

        <TextView
            android:id="@+id/qAnswer1TextView"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/custom_round_shape"
            android:clickable="false"
            android:gravity="center"
            android:onClick="OnAnswerClicked"
            android:shadowColor="@android:color/darker_gray"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/qAnswer2TextView"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/qAnswer2TextView"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="3dp"
            android:allowUndo="true"
            android:background="@drawable/custom_round_shape"
            android:clickable="false"
            android:gravity="center"
            android:onClick="OnAnswerClicked"
            android:radius="10dp"
            android:shadowColor="@android:color/darker_gray"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/qProgressBar"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.96" />

        <TextView
            android:id="@+id/qAnswer3TextView"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/custom_round_shape"
            android:clickable="true"
            android:gravity="center"
            android:onClick="OnAnswerClicked"
            android:radius="10dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/qAnswer4TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider" />

        <TextView
            android:id="@+id/qAnswer4TextView"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/custom_round_shape"
            android:clickable="true"
            android:gravity="center"
            android:onClick="OnAnswerClicked"
            android:shadowColor="@android:color/darker_gray"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/qProgressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.96" />

        <ProgressBar
            android:id="@+id/qProgressBar"
            style="@style/tallerBarStyle"
            android:layout_width="395dp"
            android:layout_height="37dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/storeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/storeimage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/shoppingcart" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>
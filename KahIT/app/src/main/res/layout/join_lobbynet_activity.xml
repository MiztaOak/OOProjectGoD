<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kahit" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_border_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/createLobbyNet_textInputLayout_playerName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:hint="Enter your profile name:"
            app:layout_constraintBottom_toBottomOf="@+id/createLobbyNet_imageButton_picture"
            app:layout_constraintEnd_toStartOf="@+id/createLobbyNet_imageButton_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/createLobbyNet_imageButton_picture">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createLobbyNet_textInputEditText_playerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hint"
                android:inputType="none"
                android:maxLength="12"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="Billie?"
                android:textAlignment="center" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/createLobbyNet_imageButton_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="Player image"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/test5" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Touch to choose picture "
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/createLobbyNet_imageButton_picture"
            app:layout_constraintStart_toStartOf="@+id/createLobbyNet_imageButton_picture"
            app:layout_constraintTop_toBottomOf="@+id/createLobbyNet_imageButton_picture" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pick a lobby"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/jChooseRoomRecyclerView"
        android:layout_width="0dp"
        android:layout_height="225dp"
        android:background="@drawable/light_border"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:itemCount="3"
        tools:listitem="@layout/lobby_row" />

    <Button
        android:id="@+id/jBackButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="launchBackChooseGameClass"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looking for hosts.."
        app:layout_constraintEnd_toEndOf="@+id/jChooseRoomRecyclerView"
        app:layout_constraintStart_toStartOf="@+id/jChooseRoomRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/jChooseRoomRecyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>